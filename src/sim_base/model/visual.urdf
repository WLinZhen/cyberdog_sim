<?xml version="1.0" ?>
<robot name="traj_base">
 <link name="world" />

  <joint name="world_joint" type="fixed">
    <parent link="world" />
    <child link = "root" />
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
  </joint>

  <link name="root">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="1 1 1"/>
      </geometry>
      <material name="transparent">
        <color rgba="1 1 1 0"/> <!-- 设置透明度，rgba中的a表示透明度，取值范围为0（完全透明）到1（完全不透明） -->
      </material>
    </visual>

    <inertial>
      <mass value="1e-5" />
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6" />
    </inertial>
  </link>

<!--Note that the "topicName" is the topic name in launch file, it should be the same. 
	Here, topicName is "base_pose_ground_truth" and so do it in the launch file(draw.launch)-->
  <gazebo reference="root">
  <visual>
    <plugin filename="libvisual_plugin.so" name="TrajPlugin">
      <uri>file://$(find sim_actors)/install/lib</uri>
    </plugin> 
      <cast_shadows>true</cast_shadows>
      <transparency>1.0</transparency>
    </visual>
    
  </gazebo>
  <!--<gazebo reference="root">
    <visual>
      <plugin filename="libdraw_traj.so" name="drawtrajPlugin">
        <topicName>/base_pose_ground_truth</topicName>
      </plugin>
    </visual>
  </gazebo>-->

</robot>
